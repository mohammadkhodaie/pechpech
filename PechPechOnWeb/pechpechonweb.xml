  <property name="project.jdk.home" value="${jdk.home.13}"/>
  <property name="project.jdk.bin" value="${jdk.bin.13}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.13"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.google-collections-0.8.classpath">
    <pathelement location="${basedir}/web/WEB-INF/lib/google-collections-0.8.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/javaee-api-7.0.jar"/>
    <pathelement location="${basedir}/web/WEB-INF/lib/json-org.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_pechpechonweb.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.pechpechonweb, clean.artifact.pechpechonweb:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.pechpechonweb" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.pechpechonweb:war_exploded" value="${basedir}/out/artifacts/PechPechOnWeb_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="clean.artifact.pechpechonweb:war_exploded" description="clean PechPechOnWeb:war exploded artifact output">
    <delete dir="${artifact.output.pechpechonweb:war_exploded}"/>
  </target>
  
  <target name="artifact.pechpechonweb:war_exploded" depends="init.artifacts, compile.module.pechpechonweb" description="Build &#39;PechPechOnWeb:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.pechpechonweb:war_exploded}"/>
    <copy todir="${artifact.output.pechpechonweb:war_exploded}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.pechpechonweb:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.pechpechonweb:war_exploded}/WEB-INF/web.xml"/>
    <mkdir dir="${artifact.output.pechpechonweb:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.pechpechonweb:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.pechpechonweb:war_exploded}/WEB-INF/classes">
      <fileset dir="${pechpechonweb.output.dir}"/>
    </copy>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.pechpechonweb:war_exploded" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>